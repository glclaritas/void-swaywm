# Key Bindings
bindsym XF86launch1 exec rogctl -dt
bindsym XF86launch4 exec rogctl -df

# Audio
bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume raise --max-volume=80
bindsym XF86AudioLowerVolume exec swayosd-client --output-volume lower --max-volume=80
bindsym Mod1+XF86AudioRaiseVolume exec swayosd-client --input-volume raise --max-volume=100
bindsym Mod1+XF86AudioLowerVolume exec swayosd-client --input-volume lower --max-volume=100
bindsym XF86AudioMute exec swayosd-client --output-volume mute-toggle
bindsym XF86AudioMicMute exec swayosd-client --input-volume mute-toggle
bindsym XF86MonBrightnessUp exec swayosd-client --brightness raise
bindsym XF86MonBrightnessDown exec swayosd-client --brightness lower

bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec $dmenu
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag --edge bottom --background 2a0033 --text ffffff -t warning -m 'You are going to logout of this session. Are you sure?' -B 'Logout' 'swaymsg exit'

bindsym $mod+$left focus left
bindsym $mod+$right focus right
bindsym $mod+$up focus up
bindsym $mod+$down focus down

bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up
bindsym $mod+Down focus down

bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down

bindsym $mod+b splith
bindsym $mod+v splitv

# run workspace switcher script
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+Tab workspace back_and_forth


bindsym $mod+Shift+1 move container to workspace number 1; workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2; workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3; workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4; workspace number 4
bindsym $mod+SHift+5 move container to workspace number 5; workspace number 5

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

bindsym $mod+r mode "resize"

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

bindsym Print exec grimshot --notify save screen ~/Pictures/Screenshots/$(date +'Screenshot_%Y-%m-%d-%H-%M-%S-%3N.png')
bindsym Shift+Print exec grimshot --notify save active ~/Pictures/Screenshots/$(date +'Screenshot_%Y-%m-%d-%H-%M-%S-%3N_window.png')
bindsym Ctrl+Print exec grimshot --notify save area  ~/Pictures/Screenshots/$(date +'Screenshot_%Y-%m-%d-%H-%M-%S-%3N_cropped.png')


#Resize 
mode "resize" {
	bindsym Left resize shrink width $resizepx
	bindsym Right resize grow width $resizepx
	bindsym Up resize shrink height $resizepx
	bindsym Down resize grow height $resizepx
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# clipman + fuzzel
bindsym $mod+p exec clipman pick --tool=CUSTOM --tool-args="fuzzel -d --width=80 --placeholder='Search or select to copy' --dmenu0" --print0 --err-on-no-selection && wtype -M ctrl -M shift v 
bindsym $mod+Shift+p exec clipman clear --tool=CUSTOM --tool-args="fuzzel -d --width=80 --placeholder='Search or select to delete' --dmenu0" --print0
bindsym $mod+Mod1+p exec clipman clear --all
